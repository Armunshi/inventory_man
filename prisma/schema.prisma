generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id         Int         @id @default(autoincrement())
  name       String
  email      String      @unique
  password   String
  role       Role
  contact    BigInt?
  address    String?
  createdAt  DateTime    @default(now())
  accounts   Account[]
  orders     Order[]     @relation("RetailerOrders")
  products   Product[]   @relation("SupplierProducts")
  sessions   Session[]
  suppOrders SuppOrder[]
}

model Product {
  id              Int         @id @default(autoincrement())
  name            String
  category        String?
  cost_price      Decimal?    @db.Decimal(10, 2)
  selling_price   Decimal?    @db.Decimal(10, 2)
  batches_present Int?
  batch_size      Int?
  min_stock       Int?
  expiry          DateTime?
  supplierId      Int
  retailerOrders  Order[]
  supplier        User        @relation("SupplierProducts", fields: [supplierId], references: [id])
  suppOrders      SuppOrder[]
}

model Order {
  id               Int       @id @default(autoincrement())
  retailerId       Int
  productId        Int
  order_date       DateTime?
  total_amount     Decimal?  @db.Decimal(10, 2)
  order_status     String?
  transaction_type String?
  batches_bought   Int?
  product          Product   @relation(fields: [productId], references: [id])
  retailer         User      @relation("RetailerOrders", fields: [retailerId], references: [id])
}

model SuppOrder {
  supplierId   Int
  productId    Int
  order_date   DateTime?
  unit_price   Decimal?  @db.Decimal(10, 2)
  order_status String?
  batches_size Int?
  product      Product   @relation(fields: [productId], references: [id])
  supplier     User      @relation(fields: [supplierId], references: [id])

  @@id([supplierId, productId])
}

model Account {
  id                String  @id @default(cuid())
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Role {
  ADMIN
  SUPPLIER
  RETAILER
}
